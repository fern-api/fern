{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "typescript",
    "jest",
    "react"
  ],

  "env": {
    "builtin": true
  },
  "rules": {
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ],
    "@typescript-eslint/no-namespace": "off",
    "@typescript-eslint/await-thenable": "error",
    "jest/valid-describe-callback": "off",
    "jest/valid-title": "off",
    "no-unused-vars": "off",
    "no-export": "off",
    "no-unsafe-optional-chaining": "off",
    "require-to-throw-message": "off",
    "no-useless-rename": "off",
    "no-unnecessary-parameter-property-assignment": "off",
    "no-standalone-expect": "off",
    "eqeqeq": "off",
    "curly": "error",
    "no-console": "error",
    "react/react-in-jsx-scope": "off",
    "@typescript-eslint/no-empty-interface": "off",
    "jest/expect-expect": "off",
    "jest/no-conditional-expect": "off",
    "no-empty-function": [
      "error",
      {
        "allow": [
          "private-constructors",
          "protected-constructors",
          "decoratedFunctions"
        ]
      }
    ]
  },
  "overrides": [
    {
        "files": ["**/*.test.ts", "**/*.spec.ts", "love_fern.js","fern/pages/docs/components/snippets/example-code.js", "packages/cli/ete-tests/src/tests/generate/fixtures/docs/fern/js/custom.js", "packages/cli/docs-resolver/src/__test__/fixtures/dry/fern/fibonacci.js"],
        "rules": {
            "no-console": "off"
        }
    }
  ]
}