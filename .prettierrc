{
  "overrides": [
    {
      "files": "**/*.{yml,yaml}",
      "options": {
        "parser": "yaml",
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "trailingComma": "none",
        "printWidth": 120,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "endOfLine": "lf"
      }
    }
  ]
}
