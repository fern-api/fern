{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "openapi": "3.0.1",
  "info": {
    "title": "Required nullable example"
  },
  "components": {
    "schemas": {
      "Foo": {
        "type": "object",
        "required": ["nullable_required_bar", "required_bar"],
        "properties": {
          "nullable_required_bar": {
            "type": "string",
            "nullable": true
          },
          "nullable_bar": {
            "type": "string",
            "nullable": true
          },
          "required_bar": {
            "type": "string",
            "nullable": false
          },
          "bar": {
            "type": "string",
            "nullable": false
          }
        }
      }
    }
  },
  "paths": {
    "/foo": {
      "get": {
        "summary": "Get foo",
        "operationId": "getFoo",
        "parameters": [
          {
            "name": "optional_baz",
            "in": "query",
            "description": "An optional baz",
            "required": false,
            "schema": {
              "type": "string",
              "nullable": false
            }
          },
          {
            "name": "required_baz",
            "in": "query",
            "description": "A required baz",
            "required": true,
            "schema": {
              "type": "string",
              "nullable": false
            }
          },
          {
            "name": "optional_nullable_baz",
            "in": "query",
            "description": "An optional baz",
            "required": false,
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "required_nullable_baz",
            "in": "query",
            "description": "A required baz",
            "required": true,
            "schema": {
              "type": "string",
              "nullable": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Foo" } }
            }
          }
        }
      }
    }
  }
}
