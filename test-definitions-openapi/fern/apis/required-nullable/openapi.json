{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "openapi": "3.0.1",
  "info": {
    "title": "Required nullable example"
  },
  "components": {
    "schemas": {
      "Foo": {
        "type": "object",
        "required": ["nullable_required_bar", "required_bar"],
        "properties": {
          "nullable_required_bar": {
            "type": "string",
            "nullable": true
          },
          "nullable_bar": {
            "type": "string",
            "nullable": true
          },
          "required_bar": {
            "type": "string",
            "nullable": false
          },
          "bar": {
            "type": "string",
            "nullable": false
          }
        }
      }
    }
  },
  "paths": {
    "/foo": {
      "get": {
        "summary": "Get foo",
        "operationId": "getFoo",
        "parameters": [
          {
            "name": "optional_baz",
            "in": "query",
            "description": "An optional baz",
            "required": false,
            "schema": {
              "type": "string",
              "nullable": false
            }
          },
          {
            "name": "required_baz",
            "in": "query",
            "description": "A required baz",
            "required": true,
            "schema": {
              "type": "string",
              "nullable": false
            }
          },
          {
            "name": "optional_nullable_baz",
            "in": "query",
            "description": "An optional baz",
            "required": false,
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "required_nullable_baz",
            "in": "query",
            "description": "A required baz",
            "required": true,
            "schema": {
              "type": "string",
              "nullable": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Foo" } }
            }
          }
        }
      }
    },
    "/foo/{id}": {
      "patch": {
        "summary": "Update foo",
        "operationId": "updateFoo",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Idempotency-Key",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nullable_text": {
                    "type": "string",
                    "nullable": true,
                    "description": "Can be explicitly set to null to clear the value"
                  },
                  "nullable_number": {
                    "type": "number",
                    "nullable": true,
                    "description": "Can be explicitly set to null to clear the value"
                  },
                  "non_nullable_text": {
                    "type": "string",
                    "description": "Regular non-nullable field"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Foo" } }
            }
          }
        }
      }
    }
  }
}
