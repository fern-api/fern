{
  "name": "@fern-api/scripts",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fern-api/fern.git",
    "directory": "packages/scripts"
  },
  "private": true,
  "files": [
    "lib"
  ],
  "type": "module",
  "source": "src/index.ts",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports":{
    ".": {
      "development": "./src/index.ts",
      "source": "./src/index.ts",
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "sideEffects": false,
  "bin": {
    "fern-scripts": "./lib/cli.js"
  },
  "scripts": {
    "clean": "rm -rf ./lib && tsc --build --clean",
    "compile": "tsc --build",
    "compile:debug": "tsc --build --sourceMap",
    "test": "vitest --passWithNoTests --run",
    "test:debug": "pnpm run test --inspect --no-file-parallelism",
    "test:update": "vitest --passWithNoTests --run -u",
    "depcheck": "depcheck",
    "generate": "fern generate --api ir-types-latest --local",
    "dist:cli": "pnpm compile && tsup src/cli.ts --format cjs --platform node --clean --sourcemap"
  },
  "devDependencies": {
    "@fern-api/fs-utils": "workspace:*",
    "@fern-api/ir-migrations": "workspace:*",
    "@fern-api/configs": "workspace:*",
    "@types/node": "18.15.3",
    "depcheck": "^1.4.7",
    "typescript": "5.8.3",
    "@types/yargs": "^17.0.32",
    "tsup": "^8.5.0",
    "yaml": "^2.4.5",
    "yargs": "^17.7.2",
    "vitest": "^2.1.9"
  }
}
