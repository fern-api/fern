{
  "name": "@fern-api/workspace-loader",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fern-api/fern.git",
    "directory": "packages/cli/workspace/loader"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "source": "./src/index.ts",
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "main": "lib/index.js",
  "source": "src/index.ts",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf ./lib && tsc --build --clean",
    "compile": "tsc --build",
    "compile:debug": "tsc --build --sourceMap",
    "depcheck": "depcheck",
    "test": "vitest --run",
    "test:debug": "pnpm run test --inspect --no-file-parallelism",
    "test:update": "vitest --run -u"
  },
  "dependencies": {
    "@fern-api/api-workspace-commons": "workspace:*",
    "@fern-api/cli-logger": "workspace:*",
    "@fern-api/configuration-loader": "workspace:*",
    "@fern-api/core-utils": "workspace:*",
    "@fern-api/fern-definition-schema": "workspace:*",
    "@fern-api/fs-utils": "workspace:*",
    "@fern-api/lazy-fern-workspace": "workspace:*",
    "@fern-api/logger": "workspace:*",
    "@fern-api/task-context": "workspace:*",
    "chalk": "^5.3.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@fern-api/configs": "workspace:*",
    "@types/js-yaml": "^4.0.8",
    "@types/node": "18.15.3",
    "depcheck": "^1.4.7",
    "typescript": "5.8.3",
    "vitest": "^2.1.9"
  }
}