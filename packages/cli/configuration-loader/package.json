    "@fern-api/configs": "workspace:*",
    "@fern-api/logger": "workspace:*",
    "@types/js-yaml": "^4.0.8",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "18.15.3",
    "@types/semver": "^7.5.8",
    "@types/tinycolor2": "^1.4.6",
    "depcheck": "^1.4.7",
    "typescript": "5.9.3",
    "vitest": "^2.1.9"
  }
