{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".depcheckrc.json",
    ".eslintignore",
    ".eslintrc.json",
    ".npmrc",
    ".prettierrc.json",
    ".stylelintrc.json",
    "babel.config.json",
    "jest.config.js",
    "package.json",
    "shared/.prettierignore",
    "shared/jest.config.shared.js",
    "shared/stylelintrc.shared.json",
    "shared/vitest.config.ts",
    "tsconfig.eslint.json",
    "tsconfig.json",
    "turbo.json",
    "vitest.workspace.ts"
  ],
  "tasks": {
    "clean": {
      "cache": false
    },
    "compile": {
      "dependsOn": ["^compile"],
      "outputs": ["lib/**"],
      "inputs": ["src/**", "tests/**", "package.json", "tsconfig.json"]
    },
    "depcheck": {
      "outputs": [],
      "inputs": ["src/**", "tests/**", "package.json", ".depcheckrc.json"]
    },
    "lint:eslint": {
      "outputs": [],
      "inputs": ["src/**", "tests/**", ".eslintrc.js", "tsconfig.json"]
    },
    "lint:eslint:fix": {
      "outputs": [],
      "inputs": ["src/**", "tests/**", ".eslintrc.js", "tsconfig.json"]
    },
    "test": {
      "dependsOn": ["^compile"],
      "outputs": [],
      "inputs": [
        "src/**",
        "tests/**",
        "jest.config.{js,mjs,mts,ts,cjs,cts}",
        "vitest.config.{js,mjs,mts,ts,cjs,cts}",
        "tsconfig.json",
        "$TURBO_ROOT$/test-definitions/**",
        "$TURBO_ROOT$/test-definitions-openapi/**"
      ]
    },
    "test:update": {
      "dependsOn": ["^compile"],
      "outputs": [],
      "inputs": [
        "src/**",
        "tests/**",
        "jest.config.{js,mjs,mts,ts,cjs,cts}",
        "vitest.config.{js,mjs,mts,ts,cjs,cts}",
        "tsconfig.json",
        "$TURBO_ROOT$/test-definitions/**",
        "$TURBO_ROOT$/test-definitions-openapi/**"
      ]
    }
  }
}
