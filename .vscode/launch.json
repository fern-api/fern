  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current test file",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "jest",
        "--runInBand",
        "--testPathPattern",
        "${file}",
        "--coverage",
        "false"
      ],
      "port": 9229,
      "cwd": "${workspaceFolder}",
      "timeout": 10000,
      "console": "integratedTerminal"
    }
  ]
}
