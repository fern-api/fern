{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "nodejs@22",
    "pnpm@9.4.0",
    "go@1.23",
    "python@3.10",
    "poetry@1.8",
    "jdk@17",
    "dotnet-sdk_10@latest",
    "buf@1.50.0",
    "git-lfs@latest"
  ],
  "shell": {
    "init_hook": [
      "printf '\\033]0;%s\\007' 'fern (devbox)'",
      "unset GOROOT # Unset GOROOT from parent shell to avoid conflicts with devbox's Go",
      "echo 'Fern development environment loaded!'",
      "echo 'Node.js:' $(node --version)",
      "echo 'pnpm:' $(pnpm --version)",
      "echo 'Go:' $(go version)",
      "echo 'Python:' $(python --version)",
      "echo 'Java:' $(java --version 2>&1 | head -1)",
      "echo '.NET:' $(dotnet --version)",
      "echo 'buf:' $(buf --version)"
    ],
    "scripts": {
      "install": "pnpm install",
      "compile": "pnpm compile",
      "test": "pnpm test",
      "lint": "pnpm check",
      "install-protoc-gen-openapi": "go install github.com/fern-api/protoc-gen-openapi/cmd/protoc-gen-openapi@latest"
    }
  }
}