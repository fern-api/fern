      "!packages/docs-config/**",
      "!packages/ir-sdk/**",
      "!packages/seed/**",
      "!seed/**",
      "!**/*.yml",
      "!**/*.yaml"
    ]
  },
  "javascript": {
    "globals": ["expect", "describe", "it", "beforeEach", "test", "beforeAll"],
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "none",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "double",
      "attributePosition": "auto",
      "bracketSpacing": true
    }
  },
  "html": {
    "formatter": {
      "selfCloseVoidElements": "always"
    }
  },
