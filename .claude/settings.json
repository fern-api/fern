{
  "permissions": {
    "allow": [
      "WebFetch(domain:docs.claude.com)",
      "WebFetch(domain:buildwithfern.com)",
      "Read(./)",
      "Glob",
      "Grep",
      "Task",
      "TodoWrite",
      "Bash(pnpm install)",
      "Bash(pnpm compile)",
      "Bash(pnpm seed:build)",
      "Bash(pnpm seed test:*)",
      "Bash(pnpm seed run:*)",
      "Bash(git diff:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git merge:*)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(**/build)",
      "Read(**/lib)",
      "Read(**/dist)",
      "Edit(**/build)",
      "Edit(**/lib)",
      "Edit(**/dist)",
      "Edit(**/generated)",
      "Edit(./packages/ir-sdk/src)",
      "Edit(./packages/ir-sdk/src/sdk)",
      "Edit(./generators/go/internal/fern/ir)",
      "Bash(git push:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -qE '\\.(js|jsx|ts|tsx|json|jsonc|css|graphql|gql|html)$'; then pnpm exec biome check --fix \"$file_path\"; fi; }"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -qE '\\.(yml|yaml)$'; then pnpm exec prettier --write \"$file_path\"; fi; }"
          }
        ]
      }
    ]
  },
  "env": {
    "FERN_TOKEN": "${FERN_TOKEN}",
    "NODE_ENV": "development",
    "PNPM_VERSION": "9.4.0"
  }
}
